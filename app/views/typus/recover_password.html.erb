<% form_tag admin_recover_password_path do %>
  <ul>
  <li><label for="email"><%= t("Email", :default => "Email") %></label>
  <%= text_field :user, :email, :size => "20", :class => 'text' %></li>
  <li><%= submit_tag t("Recover password", :default => "Recover password"), :class => 'button' %> <%= link_to t("I remember my password", :default => "I remember my password"), admin_sign_in_path %></li>
  </ul>
<% end %>